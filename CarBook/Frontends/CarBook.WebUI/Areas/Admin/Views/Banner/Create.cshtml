@model CreateBannerDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Banner</h4>
                        <p class="card-subtitle mb-4">Ana sayfanızdaki banner alanını kolay bir şekilde ekleyin.</p>

                        <form method="post">
                            
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" class="form-control" id="Title" placeholder="Başlık" asp-for="Title" />
                            </div>

                              <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" id="Description" placeholder="Açıklama" asp-for="Description" />
                            </div>
                            <div class="form-group">
                                <label for="VideoUrl">Video Url</label>
                                <input type="text" class="form-control" id="VideoUrl" placeholder="Video Url" asp-for="VideoUrl" />
                            </div>
                            <div class="form-group">
                                <label for="VideoDescription">Video Açıklama</label>
                                <input type="text" class="form-control" id="VideoDescription" placeholder="Video Açıklama" asp-for="VideoDescription" />
                            </div>
                          

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


