@model UpdateCategoryDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Blog Kategori Güncelle</h4>
                        <p class="card-subtitle mb-4">Sitenizdeki blog kategorilerinizi kolay bir şekilde güncelleyin.</p>

                        <form method="post">
                            @Html.HiddenFor(x=>x.Id)
                            <div class="form-group">
                                <label for="Name">Adı</label>
                                <input type="text" class="form-control" id="Name" placeholder="Adı" asp-for="Name" />
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Blog Kategori Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
