@model List<GetAllContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Gelen Mesajlar</h4>
                        <p class="card-subtitle mb-4">
                            İletişim sayfanızdan gönderilen mesajlarınızı görüntüleyebilir ve yönetebilirsiniz.
                        </p>

                        <table id="basic-datatable" class="table dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Adı</th>
                                    <th>Mail</th>
                                    <th>Konu</th>
                                    <th>Mesaj İçeriği</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Mail</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Message</td>
                                        <td><a href="/Admin/Contact/Remove/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

