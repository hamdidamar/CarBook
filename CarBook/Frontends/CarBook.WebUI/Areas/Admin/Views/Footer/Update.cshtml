@model UpdateFooterDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Footer Bilgileri Güncelle</h4>
                        <p class="card-subtitle mb-4">Footer bilgilerinizi kolay bir şekilde güncelleyin.</p>

                        <form method="post">
                            @Html.HiddenFor(x=>x.Id)
                            <div class="form-group">
                                <label for="Mail">Mail</label>
                                <input type="text" class="form-control" id="Mail" placeholder="Mail adresi" asp-for="Mail" />
                            </div>

                            <div class="form-group">
                                <label for="Phone">Telefon</label>
                                <input type="text" class="form-control" id="Phone" placeholder="Telefon" asp-for="Phone" />
                            </div>

                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" id="Description" placeholder="Açıklama" asp-for="Description" />
                            </div>

                            <div class="form-group">
                                <label for="Address">Adres</label>
                                <input type="text" class="form-control" id="Address" placeholder="Adres" asp-for="Address" />
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Footer Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
