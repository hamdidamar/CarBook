@model UpdateServiceDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hizmet Güncelle</h4>
                        <p class="card-subtitle mb-4">Hizmetinizi kolay bir şekilde güncelleyin.</p>

                        <form method="post">
                            @Html.HiddenFor(x=>x.Id)
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" class="form-control" id="Title" placeholder="Başlık" asp-for="Title" />
                            </div>

                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" id="Description" placeholder="Açıklama" asp-for="Description" />
                            </div>

                            <div class="form-group">
                                <label for="IconUrl">İkon</label>
                                <input type="text" class="form-control" id="IconUrl" placeholder="İkon" asp-for="IconUrl" />
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Hizmet Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
