@model List<GetAllTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referanslar</h4>
                        <p class="card-subtitle mb-4">
                            Referanslarınızı görüntüleyebilir ve yönetebilirsiniz.
                        </p>

                        <a href="/Admin/Testimonial/Create" class="btn btn-primary">Yeni Referans</a>
                        <br />
                        <br />
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Adı</th>
                                        <th>Başlık</th>
                                        <th>Yorum</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td><img src="@item.ImgUrl" width="50" height="50" class="mx-2" />@item.Name</td>
                                            <td>@item.Title</td>
                                            <td>@item.Comment</td>
                                            <td><a href="/Admin/Testimonial/Update/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
                                            <td><a href="/Admin/Testimonial/Remove/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

            </div>

        </div>


    </div>
</div>
