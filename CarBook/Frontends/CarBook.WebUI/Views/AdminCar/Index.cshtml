@model List<GetAllCarWithIncludesDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Arabalar</h4>
                        <p class="card-subtitle mb-4">
                            Araçlarınız ile ilgili detayları görüntüleyebilir ve yönetebilirsiniz.
                        </p>

                        <a href="/AdminCar/Create" class="btn btn-primary">Yeni Araç</a>
                        <br />
                        <br />
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Plaka</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Fiyat / Gün</th>
                                        <th>Sitede Görüntüle</th>
                                        <th>Fiyat İşlemleri</th>
                                        <th>Detaylar</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td scope="row">@count</td>
                                            <td>@item.Plate</td>
                                            <td>@item.BrandName</td>
                                            <td>@item.ModelName</td>
                                            <td>@item.ModelPrice ₺</td>
                                            <td><a href="/AdminCar/GetById/@item.Id" class="btn btn-outline-dark">Sitede Görüntüle</a></td>
                                            <td><a href="/AdminCar/GetById/@item.Id" class="btn btn-outline-secondary">Fiyat İşlemleri</a></td>
                                            <td><a href="/AdminCar/GetById/@item.Id" class="btn btn-outline-info">Detay</a></td>
                                            <td><a href="/AdminCar/Update/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
                                            <td><a href="/AdminCar/Remove/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

            </div>

        </div>


    </div>
</div>

