
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Ekleyin</h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light">
        <input type="hidden" readonly value="@ViewBag.BlogId" class="form-control" id="BlogId" name="BlogId"/>

        <div class="form-group">
            <label for="name">Adınız Soyadınız</label>
            <input type="text" class="form-control" id="name" name="Name">
        </div>

        <div class="form-group">
            <label for="name">Mail Adresiniz</label>
            <input type="text" class="form-control" id="Email" name="Email">
        </div>

        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea  id="Content" cols="30" rows="10" class="form-control" name="Content"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>