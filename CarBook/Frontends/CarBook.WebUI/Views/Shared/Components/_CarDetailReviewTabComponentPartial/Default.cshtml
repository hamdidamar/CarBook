@using CarBook.Dto.CarReviewDtos
@model List<GetAllCarReviewDto>

<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
	<div class="row">
		<div class="col-md-7">
			@if (Model.Any())
			{
				<h3 class="head">@Model.Count Değerlendirme</h3>
			}
			@foreach (var item in Model)
			{
				<div class="review d-flex">
					<div class="user-img" style="background-image: url(@item.CustomerImg)"></div>
					<div class="desc">
						<h4>
							<span class="text-left">@item.CustomerName</span>
							<span class="text-right">@item.CreatedDate.ToString("dd/MM/yyyy")</span>
						</h4>
						<p class="star">
							<span>
								@for (int i = 0; i < int.Parse(item.RatingValue); i++)
								{
									<i class="ion-ios-star"></i>

								}
							</span>
							<span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
						</p>
						<p>@item.Comment</p>
					</div>
				</div>
			}

		</div>
	</div>
</div>