@using CarBook.Dto.SocialMediaDtos
@model List<GetAllFooterDto>

<script src="~/theme/js/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $('#termsandrules').click(function () {
                Swal.fire({
                    title: "Şartlar & Koşullar",
                    text: "Şartlar ve koşulları aracı kiralarken öğrenebilirsiniz",
                    icon: "info"
                });
            });

            $('#security').click(function () {
                Swal.fire({
                    title: "Güvenlik",
                    text: "Bilgileriniz bizimle güvende",
                    icon: "success"
                });
            });

            $('#cookies').click(function () {
                Swal.fire({
                    title: "Çerez Politikası",
                    text: "Çerezlerinizi size daha iyi hizmet vermek için kullanıyoruz",
                    icon: "question"
                });
            });

            $('#faq').click(function () {
                Swal.fire({
                    title: "Sıkça Sorulan Sorular",
                    text: "Sıkça sorulan soruları burada bulabilirsiniz",
                    icon: "question"
                });
            });

            $('#paymentmethods').click(function () {
                Swal.fire({
                    title: "Ödeme Yöntemleri",
                    text: "Nakit ve Kredi kartı ile ödeme sağlayabilirsiniz",
                    icon: "info"
                });
            });

            $('#howitworks').click(function () {
                Swal.fire({
                    title: "Nasıl çalışır",
                    text: "Üstün hizmet kalitesi ve güvenilir çalışma ofisleri ile 7/24 hizmet veriyoruz",
                    icon: "question"
                });
            });

        });
    </script>
@foreach (var item in Model)
{
    <footer class="ftco-footer ftco-bg-dark ftco-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>book</span></a></h2>
                        <p>@item.Description</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                            @foreach (var socialMedia in (List<GetAllSocialMediaDto>)ViewBag.socialMedia)
                            {
                                <li class="ftco-animate"><a href="@socialMedia.Url"><span class="icon-@socialMedia.Icon"></span></a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2">Hızlı Linkler</h2>
                        <ul class="list-unstyled">
                            <li><a href="/About/Index" class="py-2 d-block">Hakkımızda</a></li>
                            <li><a href="/Service" class="py-2 d-block">Hizmetlerimiz</a></li>
                            <li><a href="#" id="termsandrules" class="py-2 d-block">Şartlar & Koşullar</a></li>
                            <li><a href="#" id="security" class="py-2 d-block">Güvenlik</a></li>
                            <li><a href="#" id="cookies" class="py-2 d-block">Çerez Politikası</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Müşteri Desteği</h2>
                        <ul class="list-unstyled">
                            <li><a href="#" id="faq" class="py-2 d-block">Sıkça Sorulan Sorular</a></li>
                            <li><a href="#" id="paymentmethods" class="py-2 d-block">Ödeme Yöntemleri</a></li>
                            <li><a href="/pricing" class="py-2 d-block">Kiralama</a></li>
                            <li><a href="#" id="howitworks" class="py-2 d-block">Nasıl Çalışır</a></li>
                            <li><a href="/contact" class="py-2 d-block">Bize Yazın</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Bir sorunuz mu var?</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@item.Address</span></li>
                                <li><span class="icon icon-phone"></span><span class="text">@item.Phone</span></li>
                                <li><span class="icon icon-envelope"></span><span class="text">@item.Mail</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">

                    <p>
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> | Tüm Hakları Saklıdır. <i class="icon-heart color-danger" aria-hidden="true"></i> by <a href="https://hamdidamar.com/" target="_blank">Hamdi Damar</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
}
